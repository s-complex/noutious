{
	"name": "noutious",
	"version": "0.1.2",
	"description": "A file-based content manage system, driven by Node.js.",
	"keywords": [
		"cms"
	],
	"homepage": "https://github.com/s-complex/noutious#readme",
	"bugs": {
		"url": "https://github.com/s-complex/noutious/issues"
	},
	"license": "MIT",
	"author": "Restent Ou <i@gxres.net>",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/s-complex/noutious.git"
	},
	"files": [
		"dist"
	],
	"type": "module",
	"main": "./dist/index.mjs",
	"types": "./dist/index.d.mts",
	"exports": {
		".": "./dist/index.mjs",
		"./types": "./dist/types.d.mts"
	},
	"scripts": {
		"build": "obuild",
		"stub": "obuild --stub",
		"lint:check": "oxlint && oxfmt --check",
		"lint:fix": "oxlint --fix && oxfmt",
		"test": "vitest run",
		"release": "pnpm lint:check && pnpm test && obuild && npm publish"
	},
	"dependencies": {
		"consola": "^3.4.2",
		"date-fns-tz": "^3.2.0",
		"js-yaml": "^4.1.1",
		"pathe": "^2.0.3",
		"tinyglobby": "^0.2.15"
	},
	"devDependencies": {
		"@types/js-yaml": "^4.0.9",
		"@types/node": "^25.0.3",
		"obuild": "^0.4.9",
		"oxfmt": "^0.20.0",
		"oxlint": "^1.35.0",
		"typescript": "^5.9.3",
		"vitest": "^4.0.16"
	},
	"pnpm": {
		"overrides": {
			"vite": "npm:vite@8.0.0-beta.5"
		}
	}
}
